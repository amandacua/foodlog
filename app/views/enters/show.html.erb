<%content_for :title do%>
  <%= @enter.meal_type %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<%= params%>
<div class = "columns mt -6 is-centered">
  <div class = "column is-one-third">
    <nav class = "panel is-link">

      <p class = "panel-heading">
        <%= @enter.meal_type %>
      </p>
      
      <div class = "panel-block">
        Calories:<%= @enter.calories %>
      </div>

      <div class = "panel-block">
        Proteins:<%= @enter.proteins %>
      </div>

      <div class = "panel-block">
        Carbohydrates:<%= @enter.carbohydrates %>
      </div>

      <div class = "panel-block">
        Fats:<%= @enter.fats %>
      </div>
    </nav>
    <div class = "columns is-mobile">
      <div class = "column">
        <%= link_to 'Edit', edit_enter_path(@enter) %> |
        <%= link_to 'Back', enters_path %>
      </div>
    </div>
  </div>
</div>

